generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("POSTGRES_URL")
}

model DebugMastery_Creator {
    id                  Int                   @id @default(autoincrement())
    name                String                @unique @db.VarChar(100)
    biography           String                @db.VarChar(1500)
    profileImage        String
    bannerImage         String
    youtubeHandle       String                @unique @db.VarChar(30)
    twitterHandle       String?               @unique @db.VarChar(15)
    instagramHandle     String?               @unique @db.VarChar(30)
    DebugMastery_Videos DebugMastery_Videos[]
}

model DebugMastery_Videos {
    id                     Int                  @id @default(autoincrement())
    title                  String               @db.VarChar(100)
    thumbnail              String
    videoPreview           String
    url                    String
    views                  Int
    creator                DebugMastery_Creator @relation(fields: [debugMastery_CreatorId], references: [id])
    debugMastery_CreatorId Int
}
